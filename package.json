{
	"name": "questengine",
	"version": "1.0.0",
	"main": "main.js",
	"scripts": {
		"start": "cross-env NODE_ENV=development concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && electron .\"",
		"start:react": "cross-env BROWSER=none react-scripts start",
		"build": "react-scripts build && npm run build:electron",
		"build:electron": "tsc main.ts preload.ts electron/electron-integration.ts --outDir . --target es2020 --module commonjs --esModuleInterop",
		"package": "npm run build && electron-builder",
		"publish": "npm run build && electron-builder --publish always",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"build": {
		"appId": "com.yourapp.questengine",
		"productName": "QuestEngine",
		"mac": {
			"target": "dmg"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "your-github-username",
				"repo": "questengine",
				"private": false
			}
		]
	},
	"dependencies": {
		"cors": "^2.8.5",
		"electron": "^38.3.0",
		"electron-store": "^11.0.2",
		"electron-updater": "^6.6.2",
		"express": "^5.1.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/electron-store": "^1.3.1",
		"@types/node": "^24.8.1",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"electron-builder": "^26.0.12",
		"react-scripts": "^5.0.0",
		"typescript": "^5.9.3",
		"wait-on": "^9.0.1"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
